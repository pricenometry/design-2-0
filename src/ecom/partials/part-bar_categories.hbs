<div class="block-sidebar hidden-768">
	<div class="title-sidebar">
		All categories
	</div>
	<div class="content-sidebar">
		<ul class="categories-wrap">
			{{#each menu}}
			{{#if submenu}}
			<li>
				<div class="dropdown dropdown-inline">
					<a href="{{url}}" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown">{{title}}<i class="fa fa-angle-right" aria-hidden="true"></i></a>
					<ul class="dropdown-menu bordermenu" role="menu">
						{{#each submenu}}
						{{#if subsubmenu}}
						<li>
							<li class="dropdown">
								<a href="#">{{title}}<i class="fa fa-angle-right" aria-hidden="true"></i></a>
								<ul class="dropdown-menu">		
									{{#each subsubmenu}}
									<li><a href="{{url}}">{{title}}</a></li>
									{{/each}}
								</ul>
							</li>
							{{else}}
							<li><a href="{{url}}">{{title}}</a></li>
							{{/if}}
							{{/each}}
						</ul>
					</div>  
				</li>
				{{else}}
				<li><a href="{{url}}">{{title}}</a></li>
				{{/if}}
				{{/each}}
			</ul>
		</div>
	</div>